@layout("/common/_container.html"){
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <div class="form-horizontal">

            <input type="hidden" id="id" value="${item.id}">

            <div class="row">
                <div class="col-sm-6 b-r">
                          
                            <#input id="paracode" name="参数别名(key)" value="${item.paracode}" underline="true"/>
                            <#input id="paraname" name="参数名称" value="${item.paraname}" />
                </div>

                <div class="col-sm-6">
                            <#input id="paravalue" name="参数值(value)" value="${item.paravalue}" underline="true"/>
                            <#input id="ramark" name="备注" value="${item.ramark}" />
                </div>
            </div>

            <div class="row btn-group-m-t">
                <div class="col-sm-12 text-center">
                    <#button btnCss="info" name="保存" id="ensure" icon="fa-check" clickFun="ParaInfoDlg.editSubmit()"/>
                    <#button btnCss="danger" name="取消" id="cancel" icon="fa-eraser" clickFun="ParaInfoDlg.close()"/>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="${ctxPath}/static/modular/system/para/para_info.js"></script>
@}
