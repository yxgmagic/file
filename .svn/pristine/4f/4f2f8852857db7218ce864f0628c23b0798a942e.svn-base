@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>执法人员信息管理</h5>
            </div>
            <div class="ibox-content form-horizontal">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row" class="">
                            
                            
                            <div class="col-sm-6 form-group">
			                    <label for="lemName" class="col-sm-4 control-label">执法人员名字</label>
			                    <div class="col-sm-8">
			                        <input id="lemName" name="lemName" type="text" class="form-control" />
			                    </div>
			                </div>
                            
                            <div class="col-sm-6 form-group">
			                    <label for="lawEnforcementAgencies" class="col-sm-4 control-label">所属单位</label>
			                    <div class="col-sm-8">
			                        <input id="lawEnforcementAgencies" name="lawEnforcementAgencies" type="text" class="form-control" />
			                    </div>
			                </div>

                            <div class="col-sm-6">
                            
                                <div class="form-group">
			                        <label for="lemName" class="col-sm-4 control-label">所属行政区域</label>
								    <input id="areacode" name="所属行政区" type="hidden" value=""  />
					      			<input id="roadcode" name="所属行政区" type="hidden" value=""  />
									<div class="col-sm-7 text-left">
			                        	<div>
											<div class="col-sm-6" style="padding:0px 3px">
												<select id="Select1" name="Select1"  class="layui-input" onchange="selectCity('Select1','Select2',document.getElementById('areacode'),'0');" ></select>  
											</div>
											<div class="col-sm-6" style="padding:0px 3px">
						       					<select id="Select2" name="Select2" class="layui-input" onchange="selectArea('Select1','Select2',document.getElementById('areacode'),'0');"></select>  
											</div>
										</div>
			                    	</div>
								</div>
								
                            </div>
                            
                            <div class="col-sm-12 text-center">
								<br>
                                <#button name="搜索" icon="fa-search" clickFun="LawEnforceMan.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="LawEnforceManTableToolbar" role="group">
                        	
                            @if(shiro.hasPermission("/lawEnforceMan/add")){

                                <button id="synchronize" class="btn btn-primary"
                                        onclick="window.open('${ctxPath}/static/modular/platformConfig/lawEnforceMan/template.xls');">
                                    获取批量导入模板
                                </button>

                            	<label for="file_hidden" class="btn btn-primary">
                            		<i class="glyphicon glyphicon-upload"></i>&nbsp;批量导入
								</label> 
								<input type="file" id="file_hidden" style="display: none" accept="application/vnd.ms-excel"/>

                            	<!--同步按钮目前还没有事件-->
                            	<button id="synchronize" class="btn btn-primary" onclick="layer.msg('同步')">同步</button>
                                <#button name="添加" icon="fa-plus" clickFun="LawEnforceMan.openAddLawEnforceMan()"/>
                            @}
                            @if(shiro.hasPermission("/lawEnforceMan/update")){
                                <#button name="修改" icon="fa-edit" clickFun="LawEnforceMan.openLawEnforceManDetail()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/lawEnf orceMan/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="LawEnforceMan.delete()" space="true"/>
                            @}
                        </div>
                        <#table id="LawEnforceManTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <script type="text/javascript">
        $("#file_hidden").change(function() {
            uploadXls(this.files[0]);
            //LawDocInfoDlg.ajaxFileUploadDoc('img_hidden');
        });
	</script>

    <link href="${ctxPath}/static/Resource/Scripts/Plugins/layui/css/layui.css" rel="stylesheet" />
	
	<script src="${ctxPath}/static/modular/platformConfig/area/area_select.js"></script>

<script src="${ctxPath}/static/modular/platformConfig/lawEnforceMan/lawEnforceMan.js"></script>
@}
