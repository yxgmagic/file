@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>系统参数表管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Para.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="ParaTableToolbar" role="group">
                            @if(shiro.hasPermission("/para/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Para.openAddPara()"/>
                            @}
                            @if(shiro.hasPermission("/para/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Para.openParaDetail()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/para/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Para.delete()" space="true"/>
                            @}
                        </div>
                        <#table id="ParaTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/modular/system/para/para.js"></script>
@}
