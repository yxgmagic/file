@layout("/common/_container.html"){

<style>
	#timeSelect {
		position: absolute;
		border:1px solid #ccc;
		right:0px;
		z-index: 20;
		border-radius: 5px;
		display: none;
	}
</style>

<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>黑名单管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12 form-horizontal">
                        <div class="row">
                        	
                        	<div class="col-md-4 form-group">
			                    <label for="vehicleid" class="col-sm-4 control-label">车牌号</label>
			                    <div class="col-sm-8">
			                        <input id="vehicleid" name="vehicleid" type="text" class="form-control" />
			                    </div>
			                </div>
			                
			                <div class="col-md-4 form-group">
			                    <label for="drivername" class="col-sm-4 control-label">驾驶人姓名</label>
			                    <div class="col-sm-8">
			                        <input id="drivername" name="drivername" type="text" class="form-control" />
			                    </div>
			                </div>
			                
			                <div class="col-md-4 form-group">
			                    <label for="corpname" class="col-sm-4 control-label">企业名字</label>
			                    <div class="col-sm-8">
			                        <input id="corpname" name="corpname" type="text" class="form-control" />
			                    </div>
			                </div>
			                
                        </div>
			                
			            <div class="row text-center">
			            	<#button name="搜索" icon="fa-search" clickFun="Blacklist.search()"/>
			            </div>   
                        
                        <div class="text-right" style="position: relative">
                            @if(shiro.hasPermission("/blacklist/add")){
                                <button id="generate" class="btn btn-primary" onclick="">生成疑似黑名单</button>
                                <button id="" class="btn btn-primary" onclick="Blacklist.openAddBlacklist()">添加黑名单</button>
                            @}
			            	<div id="timeSelect" style=""></div>
			            </div>

                        <#table id="BlacklistTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/zc_js/common/common.js"></script>
<script src="${ctxPath}/static/modular/lawEnforcement/blacklist/blacklist.js"></script>

<script>


$(function() {
	
});

</script>
@}
