@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>抄告报表关联管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Reportcontent.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="ReportcontentTableToolbar" role="group">
                            @if(shiro.hasPermission("/reportcontent/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Reportcontent.openAddReportcontent()"/>
                            @}
                            @if(shiro.hasPermission("/reportcontent/update")){
                                <#button name="修改" icon="fa-edit" clickFun="Reportcontent.openReportcontentDetail()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/reportcontent/delete")){
                                <#button name="删除" icon="fa-remove" clickFun="Reportcontent.delete()" space="true"/>
                            @}
                        </div>
                        <#table id="ReportcontentTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/modular/report/reportcontent/reportcontent.js"></script>
@}
